<%- include('header')%>
<div class="container">
    <h1 class="text-center">Edit Page </h1>
 
    <form id="productEditForm">
        <div class="form-group">
          <label for="exampleInputPassword1">Product Name</label>
          <input type="text" class="form-control" id="exampleInputPassword1"
           placeholder="kurti" name="prName" value="<%=data.prName%>">
        </div>
        <div class="form-group">
          <label for="exampleInputPassword1">Product Price</label>
          <input type="text" class="form-control" id="exampleInputPassword1"
           placeholder="1000" name="prPrice" value="<%=data.prPrice%>" >
        </div> 
        <div class="form-group">
          <label for="exampleInputPassword1">Product Discount</label>
          <input type="number" class="form-control" id="exampleInputPassword1"
           placeholder="20 in%" name="prDiscount" min="0" max="99" value="<%=data.prDiscount%>">
        </div> 
        <div class="form-group">
          <label for="exampleInputPassword1"> Product Select Category</label>
          <select name="prCatid" id="" class="form-control" value="<%=data.prCatid%>">
            <option value="">Please Select Category</option>
            <option value="1">Womens Wear</option>
            <option value="2">Mens Wear</option>
            <option value="3">kids Wear</option>

            
           
        </select>
        </div> 
        <div class="form-group">
          <label for="exampleInputPassword1"> Select Product Image</label>
          <input type="file" class="form-control" id="exampleInputPassword1"
           placeholder="images" name="prImage"  value="<%=data.prImage%>">

        </div> 
        <div class="form-group">
          <label for="exampleInputPassword1">Product Description</label>
          <textarea class="form-control" name="prDescription"  value="<%=data.prDescription%>"></textarea>
          <input type="hidden" name="_id" value="<%=data._id%>">
        
        </div> 
        <div id="errMsg"></div>

        <button type="button" class="btn btn-primary btn-edit">Add</button>
      </form>
</div>
<%- include('footer')%>
