<%- include('header')%>
<div class="container">
    <h1 class="text-center">Product Page </h1>
 
    <form id="productForm">
        <div class="form-group">
          <label for="exampleInputPassword1">Product Name</label>
          <input type="text" class="form-control" id="exampleInputPassword1"
           placeholder="kurti" name="prName">
           <div id="errMsg1"></div>
        </div>
        <div class="form-group">
          <label for="exampleInputPassword1">Product Price</label>
          <input type="text" class="form-control" id="exampleInputPassword1"
           placeholder="1000" name="prPrice">
           <div id="errMsg2"></div>
        </div> 
        <div class="form-group">
          <label for="exampleInputPassword1">Product Discount</label>
          <input type="number" class="form-control" id="exampleInputPassword1"
           placeholder="20 in%" name="prDiscount" min="0" max="99">
           <div id="errMsg3"></div>
        </div> 
        <div class="form-group">
          <label for="exampleInputPassword1"> Product Select Category</label>
          <select name="prCatid" id="" class="form-control">
            <option value="">Please Select Category</option>
            <% smita.forEach(function(obj){%>
            <option value="<%=obj._id%>"><%=obj.catName%></option>
            <% }) %>
        </select>
        <div id="errMsg4"></div>

        </div> 
        <div class="form-group">
          <label for="exampleInputPassword1"> Select Product Image</label>
          <input type="file" class="form-control" id="exampleInputPassword1"
           placeholder="images" name="prImage">
           <div id="errMsg5"></div>

        </div> 
        <div class="form-group">
          <label for="exampleInputPassword1">Product Description</label>
          <textarea class="form-control" name="prDescription"></textarea>
          <div id="errMsg6"></div>

        </div> 
        <button type="button" class="btn btn-primary btn-product">Add</button>
      </form>
</div>
<%- include('footer')%>
